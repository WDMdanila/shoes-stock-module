<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="shoes_model_type_tree">
        <field name="name">shoes.model.type.tree</field>
        <field name="model">shoes.model.type</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Model Types list" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="shoes_model_type_form" model="ir.ui.view">
        <field name="name">shoes.model.type.form</field>
        <field name="model">shoes.model.type</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Model Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
